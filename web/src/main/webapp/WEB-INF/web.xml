<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.Home</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetTable</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.GetTable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTable</servlet-name>
        <url-pattern>/get_table</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetTotalCount</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.GetTotalCount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTotalCount</servlet-name>
        <url-pattern>/get_total</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetSortedTable</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.GetSortedTable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSortedTable</servlet-name>
        <url-pattern>/get_sorted</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Create</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.Create</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.Delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.Update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchCount</servlet-name>
        <servlet-class>com.gdc.apps.web.servlets.GetTotalSearchCount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchCount</servlet-name>
        <url-pattern>/get_search_count</url-pattern>
    </servlet-mapping>
</web-app>